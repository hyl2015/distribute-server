{
  "connections": [
    {
      "host": "localhost",
      "port": 8080,
      "routes": {
        "cors": true
      },
      "router": {
        "stripTrailingSlash": true
      }
    }
  ],
  "registrations": [
    {
      "plugin": "hapi-auth-jwt2"
    },
    {
      "plugin": "./src/plugins/auth"
    },
    {
      "plugin": "./src/api",
      "options": {
        "routes": {
          "prefix": "/api"
        }
      }
    },
    {
      "plugin": {
        "register": "hapi-cors",
        "options": {
          "origins": [
            "http://localhost:8081"
          ]
        }
      }
    }
  ]
}